<div class="task-page" id="task17App">
  <h2 class="task-page__title">Задание №17: Пунктуация</h2>
  
  <div id="task17Container">
    <div class="task-card">
      <div class="task-meta" id="task17-meta">
        <span class="task-meta__number">Загрузка...</span>
      </div>
      <div class="task-content">
        <p>Загрузка задания...</p>
      </div>
    </div>
  </div>
</div>

<style>
  /* Стили для отображения объяснения с подчеркиваниями */
  .task-page .span-participle,
  .task-page .span-gerund {
    display: inline;
  }
  
  /* Стили для кликабельных цифр в задании №17 */
  .task17-digit {
    cursor: pointer;
    padding: 2px 6px;
    margin: 0 2px;
    border-radius: 4px;
    transition: all 0.2s;
    display: inline-block;
    position: relative;
  }
  
  .task17-digit:hover:not(.selected) {
    background-color: rgba(0, 240, 255, 0.2);
    box-shadow: 0 0 10px rgba(0, 240, 255, 0.3);
  }
  
  .task17-digit.selected {
    background-color: var(--neon-cyan);
    color: var(--bg-primary);
    font-weight: bold;
  }
</style>

<!-- React через CDN -->
<script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
<script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
<script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

<script type="text/babel">
  const { useState, useEffect, useRef } = React;

  // Получаем taskId из URL
  const pathParts = window.location.pathname.split('/');
  const taskId = parseInt(pathParts[pathParts.length - 1]) || null;

  function Task17Play() {
    const [mode, setMode] = useState('digits');
    const [taskData, setTaskData] = useState(null);
    const [selectedDigits, setSelectedDigits] = useState(new Set());
    const [answerInput, setAnswerInput] = useState('');
    const [commaPositions, setCommaPositions] = useState(new Set());
    const [checkResult, setCheckResult] = useState(null);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState(null);
    const inputRef = useRef(null);

    useEffect(() => {
      const loadTask = async () => {
        try {
          setLoading(true);
          const response = await fetch(`/api/task17/${taskId}/play?mode=${mode}`);
          if (!response.ok) throw new Error('Не удалось загрузить задание');
          const data = await response.json();
          setTaskData(data);
          setError(null);
        } catch (err) {
          setError(err instanceof Error ? err.message : 'Ошибка загрузки');
        } finally {
          setLoading(false);
        }
      };

      if (taskId) {
        loadTask();
      }
    }, [taskId, mode]);

    // Парсинг текста с метками (1), (2)...
    const parseTextWithDigits = (text) => {
      const parts = [];
      const regex = /\((\d+)\)/g;
      let lastIndex = 0;
      let match;

      while ((match = regex.exec(text)) !== null) {
        if (match.index > lastIndex) {
          parts.push({ text: text.substring(lastIndex, match.index), digit: null });
        }
        const digitNum = parseInt(match[1], 10);
        parts.push({ text: match[0], digit: digitNum });
        lastIndex = match.index + match[0].length;
      }

      if (lastIndex < text.length) {
        parts.push({ text: text.substring(lastIndex), digit: null });
      }

      return parts;
    };

    const handleDigitClick = (digit) => {
      console.log('handleDigitClick called with digit:', digit);
      setSelectedDigits(prevSelected => {
        const newSet = new Set(prevSelected);
        if (newSet.has(digit)) {
          newSet.delete(digit);
          console.log('Removed digit:', digit);
        } else {
          newSet.add(digit);
          console.log('Added digit:', digit);
        }
        console.log('New selected:', Array.from(newSet));
        return newSet;
      });
    };

    // Синхронизация поля ввода с selectedDigits при изменении
    useEffect(() => {
      const sortedDigits = Array.from(selectedDigits).sort((a, b) => a - b);
      const inputValue = sortedDigits.join('');
      console.log('Syncing input with selectedDigits:', sortedDigits, '->', inputValue);
      setAnswerInput(inputValue);
    }, [selectedDigits]);


    // Синхронизация поля ввода с выбранными цифрами
    const handleInputChange = (e) => {
      const value = e.target.value;
      setAnswerInput(value);
      
      // Парсим введенные цифры - извлекаем все отдельные цифры
      const digits = value
        .split('')
        .map(char => parseInt(char, 10))
        .filter(n => !isNaN(n) && n > 0);
      
      setSelectedDigits(new Set(digits));
    };

    const handleCommaClick = (position) => {
      const newSet = new Set(commaPositions);
      if (newSet.has(position)) {
        newSet.delete(position);
      } else {
        newSet.add(position);
      }
      setCommaPositions(newSet);
    };

    const handleCheck = async () => {
      if (!taskData) return;

      if (mode === 'digits') {
        // Используем актуальное состояние selectedDigits
        // Принудительно получаем актуальное значение
        const currentDigits = Array.from(selectedDigits).sort((a, b) => a - b);
        
        console.log('handleCheck - currentDigits from state:', currentDigits);
        console.log('handleCheck - answerInput:', answerInput);
        
        if (currentDigits.length === 0) {
          alert('Введите ответ, выбрав цифры в тексте или введя их вручную');
          if (inputRef.current) {
            inputRef.current.focus();
          }
          return;
        }

        try {
          setLoading(true);
          const payload = {
            mode: 'digits',
            digits: currentDigits, // Отправляем массив чисел [1, 2, 3], а не строку
            spans: []
          };
          
          console.log('Sending payload to server:', JSON.stringify(payload));
          
          const response = await fetch(`/api/task17/${taskId}/check`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          if (!response.ok) {
            const errorText = await response.text();
            console.error('Server error response:', errorText);
            throw new Error('Ошибка проверки');
          }
          
          const result = await response.json();
          console.log('Check result from server:', result);
          setCheckResult(result);
        } catch (err) {
          console.error('Error in handleCheck:', err);
          setError(err instanceof Error ? err.message : 'Ошибка проверки');
        } finally {
          setLoading(false);
        }
        return;
      }

      // Режим запятых
      try {
        setLoading(true);
        const payload = {
          mode: 'commas',
          comma_positions: Array.from(commaPositions).sort((a, b) => a - b),
          spans: []
        };

        const response = await fetch(`/api/task17/${taskId}/check`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (!response.ok) throw new Error('Ошибка проверки');
        const result = await response.json();
        setCheckResult(result);
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Ошибка проверки');
      } finally {
        setLoading(false);
      }
    };

    if (loading && !taskData) {
      return (
        <div className="task-card">
          <div className="task-content">
            <p>Загрузка...</p>
          </div>
        </div>
      );
    }

    if (error) {
      return (
        <div className="task-card">
          <div className="task-content">
            <p style={{color: 'red'}}>Ошибка: {error}</p>
          </div>
        </div>
      );
    }

    if (!taskData) {
      return (
        <div className="task-card">
          <div className="task-content">
            <p>Задание не найдено</p>
          </div>
        </div>
      );
    }

    return (
      <div className="task-card">
        <div className="task-meta">
          <span className="task-meta__number">№ 17</span>
          {taskData.source && <span className="task-meta__source">{taskData.source}</span>}
        </div>
        
        <div className="task-content">
          {/* Переключатель режимов */}
          <div style={{marginBottom: '24px', display: 'flex', gap: '16px', flexWrap: 'wrap'}}>
            <label style={{display: 'flex', alignItems: 'center', gap: '8px', cursor: 'pointer', color: 'var(--text-secondary)'}}>
              <input
                type="radio"
                checked={mode === 'digits'}
                onChange={() => { setMode('digits'); setCheckResult(null); }}
              />
              Режим «Цифры»
            </label>
            <label style={{display: 'flex', alignItems: 'center', gap: '8px', cursor: 'pointer', color: 'var(--text-secondary)'}}>
              <input
                type="radio"
                checked={mode === 'commas'}
                onChange={() => { setMode('commas'); setCheckResult(null); }}
              />
              Режим «Запятые»
            </label>
          </div>

          {/* Текст задания */}
          <div className="task-prompt">
            {mode === 'digits' ? (
              <div style={{fontSize: '18px', lineHeight: '1.8'}}>
                {parseTextWithDigits(taskData.text).map((part, idx) => {
                  if (part.digit !== null) {
                    const isSelected = selectedDigits.has(part.digit);
                    return (
                      <span
                        key={`digit-${part.digit}-${idx}`}
                        className={`task17-digit ${isSelected ? 'selected' : ''}`}
                        data-digit={part.digit}
                        onClick={(e) => {
                          console.log('Click on digit:', part.digit, 'Current selected:', Array.from(selectedDigits));
                          e.preventDefault();
                          e.stopPropagation();
                          if (handleDigitClick) {
                            handleDigitClick(part.digit);
                          } else {
                            console.error('handleDigitClick is not defined');
                          }
                        }}
                        title={`Кликните, чтобы ${isSelected ? 'убрать' : 'добавить'} цифру ${part.digit} в ответ`}
                        style={{
                          userSelect: 'none',
                          WebkitUserSelect: 'none',
                          cursor: 'pointer'
                        }}
                      >
                        {part.text}
                      </span>
                    );
                  }
                  return <span key={`text-${idx}`}>{part.text}</span>;
                })}
              </div>
            ) : (
              <div style={{fontSize: '18px', lineHeight: '1.8'}}>
                {taskData.text.split('').map((char, idx) => (
                  <React.Fragment key={idx}>
                    <span>{char}</span>
                    <span
                      onClick={() => handleCommaClick(idx + 1)}
                      style={{
                        display: 'inline-block',
                        width: '8px',
                        height: '16px',
                        margin: '0 2px',
                        cursor: 'pointer',
                        position: 'relative',
                        verticalAlign: 'text-bottom'
                      }}
                      title={`Позиция ${idx + 1}`}
                    >
                      {commaPositions.has(idx + 1) && (
                        <span style={{
                          position: 'absolute',
                          top: '50%',
                          left: '50%',
                          transform: 'translate(-50%, -50%)',
                          fontSize: '18px',
                          color: 'var(--neon-cyan)',
                          fontWeight: 'bold'
                        }}>,</span>
                      )}
                    </span>
                  </React.Fragment>
                ))}
              </div>
            )}
          </div>

          {/* Поле для ввода ответа (режим цифр) */}
          {mode === 'digits' && (
            <div className="task-controls">
              <input
                ref={inputRef}
                className="task-input"
                type="text"
                value={answerInput}
                onChange={handleInputChange}
                placeholder="Введите цифры ответа или кликните на цифры в тексте"
                inputMode="numeric"
                onKeyPress={(e) => {
                  if (e.key === 'Enter') {
                    handleCheck();
                  }
                }}
              />
              <button
                className="task-send"
                onClick={handleCheck}
                disabled={loading}
              >
                <span>{loading ? 'Проверка...' : 'Отправить'}</span>
              </button>
            </div>
          )}

          {/* Результаты проверки */}
          {checkResult && (
            <div className="task-solution-block">
              <h3 style={{marginTop: 0, marginBottom: '16px', color: 'var(--text-primary)'}}>Результат проверки</h3>
              
              {checkResult.digits && (
                <div style={{marginBottom: '16px'}}>
                  <div style={{
                    fontWeight: 'bold',
                    color: checkResult.digits.isCorrect ? '#bfd884' : '#f6b462',
                    marginBottom: '8px'
                  }}>
                    Цифры: {checkResult.digits.isCorrect ? '✓ Верно' : '✗ Неверно'}
                  </div>
                  {checkResult.digits.missing.length > 0 && (
                    <div style={{color: 'var(--text-secondary)'}}>
                      Отсутствуют: {checkResult.digits.missing.join(', ')}
                    </div>
                  )}
                  {checkResult.digits.extra.length > 0 && (
                    <div style={{color: 'var(--text-secondary)'}}>
                      Лишние: {checkResult.digits.extra.join(', ')}
                    </div>
                  )}
                </div>
              )}

              {checkResult.commas && (
                <div style={{marginBottom: '16px'}}>
                  <div style={{
                    fontWeight: 'bold',
                    color: checkResult.commas.isCorrect ? '#bfd884' : '#f6b462',
                    marginBottom: '8px'
                  }}>
                    Запятые: {checkResult.commas.isCorrect ? '✓ Верно' : '✗ Неверно'}
                  </div>
                  {checkResult.commas.missing.length > 0 && (
                    <div style={{color: 'var(--text-secondary)'}}>
                      Отсутствуют позиции: {checkResult.commas.missing.join(', ')}
                    </div>
                  )}
                  {checkResult.commas.extra.length > 0 && (
                    <div style={{color: 'var(--text-secondary)'}}>
                      Лишние позиции: {checkResult.commas.extra.join(', ')}
                    </div>
                  )}
                </div>
              )}

              <div style={{
                marginBottom: '16px',
                fontWeight: 'bold',
                color: 'var(--neon-cyan)'
              }}>
                Баллы: {checkResult.score.total} / {checkResult.score.max}
              </div>

              {/* Объяснение */}
              {checkResult.explanation && checkResult.explanation.shown && (
                <div style={{
                  marginTop: '24px',
                  padding: '16px',
                  background: 'var(--bg-secondary)',
                  borderRadius: '8px',
                  border: '1px solid var(--glass-border)'
                }}>
                  <h4 style={{marginTop: 0, marginBottom: '12px'}}>Объяснение:</h4>
                  {checkResult.explanation.answer_text && (
                    <div style={{marginBottom: '12px'}} className="solution-answer">
                      {checkResult.explanation.answer_text}
                    </div>
                  )}
                  {checkResult.explanation.explanation_md && (
                    <div
                      dangerouslySetInnerHTML={{
                        __html: checkResult.explanation.explanation_md.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                      }}
                      className="editor-content"
                    />
                  )}
                </div>
              )}
            </div>
          )}
        </div>
      </div>
    );
  }

  const root = ReactDOM.createRoot(document.getElementById('task17Container'));
  root.render(<Task17Play />);
</script>
