  // Старый компонент для обратной совместимости (если открыт /task17/:id)
  function Task17Play() {
    const mode = 'digits'; // Фиксированный режим
    const [taskData, setTaskData] = useState(null);
    const [selectedDigits, setSelectedDigits] = useState(new Set());
    const [answerInput, setAnswerInput] = useState('');
    const [checkResult, setCheckResult] = useState(null);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState(null);
    const [isLiked, setIsLiked] = useState(false);
    const [showSolution, setShowSolution] = useState(false);
    const [showDigits, setShowDigits] = useState(true);
    const [showToolbar, setShowToolbar] = useState(true);
    const [currentTaskId, setCurrentTaskId] = useState(taskId);
    const [allTasks, setAllTasks] = useState([]);
    const [currentTaskIndex, setCurrentTaskIndex] = useState(-1);
    const [correctDigits, setCorrectDigits] = useState(new Set());
    const [extraDigits, setExtraDigits] = useState(new Set());
    const inputRef = useRef(null);

    // Загружаем список всех заданий
    useEffect(() => {
      const loadAllTasks = async () => {
        try {
          const response = await fetch('/api/task17');
          if (!response.ok) throw new Error('Не удалось загрузить список заданий');
          const tasks = await response.json();
          setAllTasks(tasks);
          
          // Находим индекс текущего задания
          if (currentTaskId) {
            const index = tasks.findIndex(t => t.id === currentTaskId);
            if (index !== -1) {
              setCurrentTaskIndex(index);
            } else if (tasks.length > 0) {
              // Если текущее задание не найдено, берем первое
              setCurrentTaskId(tasks[0].id);
              setCurrentTaskIndex(0);
            }
          } else if (tasks.length > 0) {
            // Если taskId не задан, берем первое задание
            setCurrentTaskId(tasks[0].id);
            setCurrentTaskIndex(0);
          }
        } catch (err) {
          console.error('Ошибка загрузки списка заданий:', err);
        }
      };
      
      loadAllTasks();
      // eslint-disable-next-line react-hooks/exhaustive-deps
    }, []);

    // Загружаем текущее задание
    useEffect(() => {
      const loadTask = async () => {
        if (!currentTaskId) return;
        
        try {
          setLoading(true);
          setCheckResult(null); // Сбрасываем результат при переключении
          setSelectedDigits(new Set()); // Сбрасываем выбранные цифры
          setAnswerInput(''); // Сбрасываем ввод
