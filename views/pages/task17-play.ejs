  // Инициализация панели инструментов для текста задания (слева)
  function initTextToolbar() {
    const toolbar = document.getElementById('task17-toolbar-left');
    const textContainer = document.getElementById('task17-text-editable');
    
    if (!toolbar || !textContainer) return;
    
    const markParticipleBtn = document.getElementById('task17-mark-participle-text');
    const markGerundBtn = document.getElementById('task17-mark-gerund-text');
    const markMainWordBtn = document.getElementById('task17-mark-main-word-text');
    const removeMarkBtn = document.getElementById('task17-remove-mark-text');
    
    // Функция для применения стиля
    function applySpanClass(className) {
      const selection = window.getSelection();
      if (selection.rangeCount === 0 || selection.toString().trim() === '') {
        alert('Выделите текст в предложении');
        return;
      }
      
      const range = selection.getRangeAt(0);
      if (range.collapsed) {
        alert('Выделите текст');
        return;
      }
      
      // Проверяем, что выделение внутри текста задания
      if (!textContainer.contains(range.commonAncestorContainer)) {
        alert('Выделите текст в предложении');
        return;
      }
      
      // Игнорируем клики по цифрам
      if (range.commonAncestorContainer.closest && range.commonAncestorContainer.closest('.task17-digit')) {
        return;
      }
      
      const span = document.createElement('span');
      span.className = className;
      
      try {
        range.surroundContents(span);
      } catch (e) {
        const contents = range.extractContents();
        span.appendChild(contents);
        range.insertNode(span);
      }
      
      selection.removeAllRanges();
      textContainer.focus();
    }
    
    markParticipleBtn.addEventListener('click', () => applySpanClass('span-participle'));
    markGerundBtn.addEventListener('click', () => applySpanClass('span-gerund'));
    markMainWordBtn.addEventListener('click', () => applySpanClass('span-main-word'));
    
    removeMarkBtn.addEventListener('click', () => {
      const selection = window.getSelection();
      let range = selection.rangeCount > 0 ? selection.getRangeAt(0) : null;
      
      if (!range) {
        range = document.createRange();
        if (selection.anchorNode) {
          range.setStart(selection.anchorNode, selection.anchorOffset);
          range.setEnd(selection.anchorNode, selection.anchorOffset);
        }
      }
      
      const selectedParent = range.commonAncestorContainer;
      let parent = selectedParent.nodeType === 1 ? selectedParent : selectedParent.parentElement;
      
      while (parent && parent !== textContainer) {
        if (parent.classList && (parent.classList.contains('span-participle') || parent.classList.contains('span-gerund') || parent.classList.contains('span-main-word'))) {
          const grandParent = parent.parentNode;
          while (parent.firstChild) {
            grandParent.insertBefore(parent.firstChild, parent);
          }
          grandParent.removeChild(parent);
          selection.removeAllRanges();
          textContainer.focus();
          return;
        }
        parent = parent.parentElement;
      }
      
      alert('Поместите курсор в текст с выделением');
    });
  }
  
