-- новая структура: subtopic_id (тип можно хранить опционально)
CREATE TABLE assignments_new (
  id          INTEGER PRIMARY KEY AUTOINCREMENT,
  subtopic_id INTEGER NOT NULL,                  -- ПРЯМАЯ связь с подтемой
  sub_number  INTEGER,                           -- № внутри подтемы (опц., для сортировки)
  prompt      TEXT NOT NULL,
  context     TEXT,
  difficulty  INTEGER DEFAULT 1,
  created_at  TEXT NOT NULL DEFAULT (datetime('now')),
  FOREIGN KEY (subtopic_id) REFERENCES subtopics(id),
  CONSTRAINT uq_subtopic_number UNIQUE (subtopic_id, sub_number)
);

-- копируем: берём ПЕРВУЮ связанную подтему из assignment_subtopics
INSERT INTO assignments_new (id, subtopic_id, sub_number, prompt, context, difficulty, created_at)
SELECT
  a.id,
  (
    SELECT asub.subtopic_id
    FROM assignment_subtopics asub
    WHERE asub.assignment_id = a.id
    ORDER BY asub.subtopic_id
    LIMIT 1
  ) AS subtopic_id,
  a.number AS sub_number,             -- старое поле number кладём в sub_number (внутри темы)
  a.prompt,
  a.context,
  a.difficulty,
  a.created_at
FROM assignments a;

-- если у какого-то задания не нашлась подтема → временно свяжем с «заглушкой»
-- (создадим заглушку, если нужно)
INSERT OR IGNORE INTO subtopics (type_id, code, title)
VALUES (1, 'UNSET', 'Без подтемы');

UPDATE assignments_new
SET subtopic_id = (SELECT id FROM subtopics WHERE code='UNSET')
WHERE subtopic_id IS NULL;

-- подменяем таблицы
DROP TABLE assignments;
ALTER TABLE assignments_new RENAME TO assignments;

-- связующая таблица больше не нужна
DROP TABLE IF EXISTS assignment_subtopics;

CREATE INDEX IF NOT EXISTS idx_assignments_subtopic ON assignments(subtopic_id);

PRAGMA foreign_keys=on;
